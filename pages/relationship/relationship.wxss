/* pages/relationship/relationship.wxss */
.container {
  position: relative;
  min-height: 100vh;
  height: 100vh;
  background-image: url('https://miniprogramforlusin.oss-cn-hangzhou.aliyuncs.com/Sucai/backgroundone.png');
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  background-attachment: fixed;
  overflow-x: hidden;
  display: flex;
  flex-direction: column;
}

/* 背景遮罩层 */
.container::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.3) 0%, rgba(118, 75, 162, 0.3) 100%);
  z-index: -1;
}

/* 背景图片 */
.background-image {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  opacity: 0.3;
}

/* 页面头部 */
.page-header {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10rpx);
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
}

.back-btn {
  display: flex;
  align-items: center;
  color: rgb(66, 94, 74);
  font-size: 28rpx;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  background: rgba(255, 255, 255, 0.1);
  transition: all 0.3s ease;
}

.back-btn:active {
  background: rgba(255, 255, 255, 0.2);
  transform: scale(0.95);
}

.back-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
}

.back-text {
  font-size: 26rpx;
}

.page-title {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
  color: rgb(66, 94, 74);
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

/* 关系网区域 */
.relationship-section {
  flex: 1;
  padding: 30rpx 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.relationship-container {
  position: relative;
  width: 100%;
  flex: 1;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  overflow: hidden;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  margin-bottom: 30rpx;
}
.full-container-image{
    width: 100%;
    height: 100%;
    display: flex; /* 使用flex布局实现居中 */
    align-items: center; /* 垂直居中 */
    justify-content: center; /* 水平居中 */
}
.relationship-canvas {
  position: relative;
  width: 100%;
  height: 100%;
  transition: transform 0.3s ease;
}

/* 角色节点 */
.character-node {
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
  cursor: pointer;
  transition: all 0.3s ease;
}

.character-node:active {
  transform: scale(1.1);
}

.center-character {
  z-index: 10;
}

.character-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 3rpx solid #fff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
  margin-bottom: 8rpx;
}

.center-character .character-avatar {
  width: 100rpx;
  height: 100rpx;
  border: 4rpx solid #ffd700;
  box-shadow: 0 6rpx 16rpx rgba(255, 215, 0, 0.3);
}

.character-name {
  font-size: 20rpx;
  color: #fff;
  text-align: center;
  font-weight: 500;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.5);
  background: rgba(0, 0, 0, 0.3);
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  backdrop-filter: blur(5rpx);
}

.center-character .character-name {
  font-size: 22rpx;
  font-weight: 600;
  background: rgba(255, 215, 0, 0.2);
  color: #ffd700;
}

/* 连接线 */
.connection-line {
  position: absolute;
  height: 2rpx;
  background: linear-gradient(90deg, rgba(255, 0, 0, 0.9) 0%, rgba(255, 255, 255, 0.2) 100%);
  transform-origin: left center;
  z-index: 1;
}

/* 缩放控制 */
.zoom-controls {
  display: flex;
  justify-content: center;
  gap: 20rpx;
  margin-top: 30rpx;
}

.zoom-btn {
  width: 120rpx;
  height: 100rpx;
  border-radius: 50%;
  background: rgb(66, 94, 74,0.5);
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  
}

.zoom-btn:active {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.9);
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .relationship-container {
    height: 500rpx;
  }
  
  .character-avatar {
    width: 60rpx;
    height: 60rpx;
  }
  
  .center-character .character-avatar {
    width: 80rpx;
    height: 80rpx;
  }
  
  .character-name {
    font-size: 18rpx;
  }
  
  .center-character .character-name {
    font-size: 20rpx;
  }
}
