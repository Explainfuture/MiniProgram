/* pages/episodes/episodes.wxss */
.container {
  position: relative;
  min-height: 100vh;
  height: 100vh;
  background-image: url('https://miniprogramforlusin.oss-cn-hangzhou.aliyuncs.com/Sucai/backgroundone.png');
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  background-attachment: fixed;
  overflow-x: hidden;
  display: flex;
  flex-direction: column;
}

/* 背景遮罩层 */
.container::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.3) 0%, rgba(118, 75, 162, 0.3) 100%);
  z-index: -1;
}

/* 背景图片 */
.background-image {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  opacity: 0.3;
}

/* 页面头部 */
.page-header {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10rpx);
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
}

.back-btn {
  display: flex;
  align-items: center;
  color: rgb(66, 94, 74);
  font-size: 28rpx;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  background: rgba(255, 255, 255, 0.1);
  transition: all 0.3s ease;
}

.back-btn:active {
  background: rgba(255, 255, 255, 0.2);
  transform: scale(0.95);
}

.back-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
}

.back-text {
  font-size: 26rpx;
  font-weight: bold;
}

.page-title {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

/* 剧集介绍区域 */
.episodes-section {
  flex: 1;
  padding: 30rpx 20rpx;
  overflow-y: auto;
  padding-bottom: 40rpx;
}

.episode-card {
  margin-bottom: 30rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  transition: all 0.3s ease;
}

.episode-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.15);
}

.episode-content {
  display: flex;
  flex-direction: column;
}

.episode-video {
  position: relative;
  width: 100%;
  height: 300rpx;
  overflow: hidden;
}

.episode-preview {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.episode-info {
  padding: 30rpx;
}

.episode-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 8rpx;
}

.episode-subtitle {
  font-size: 24rpx;
  color: #7f8c8d;
  margin-bottom: 20rpx;
  font-style: normal;
}

.episode-description {
  font-size: 26rpx;
  color: #5a6c7d;
  line-height: 1.6;
  margin-bottom: 20rpx;
  text-align: justify;
}

.episode-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag {
  background: #60ac7a;
  color: #fff;
  font-size: 22rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-weight: 500;
  box-shadow: 0 2rpx 8rpx rgba(83, 158, 123, 0.3);
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .episode-video {
    height: 250rpx;
  }
  
  .episode-info {
    padding: 25rpx;
  }
  
  .episode-title {
    font-size: 28rpx;
  }
  
  .episode-description {
    font-size: 24rpx;
  }
  
  .tag {
    font-size: 20rpx;
    padding: 6rpx 12rpx;
  }
}
