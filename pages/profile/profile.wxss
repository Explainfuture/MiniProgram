/* pages/profile/profile.wxss */
.container {
  background-image: url('https://miniprogramforlusin.oss-cn-hangzhou.aliyuncs.com/Sucai/backgroundone.png');
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  background-attachment: fixed;
  min-height: 100vh;
}

/* 背景遮罩层 */
.container::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.3) 0%, rgba(118, 75, 162, 0.3) 100%);
  z-index: -1;
}

/* 用户信息区域 */
.user-section {
  padding: 60rpx 30rpx 40rpx;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10rpx);
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.2);
}

.user-info {
  display: flex;
  align-items: center;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
  margin-right: 30rpx;
}

.user-details {
  flex: 1;
}

.user-name {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #fff;
  margin-bottom: 10rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.user-desc {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 登录区域 */
.login-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.default-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
  margin-bottom: 30rpx;
}

.login-info {
  margin-bottom: 40rpx;
}

.login-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
  margin-bottom: 10rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.login-desc {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

.login-btn {
  width: 300rpx;
  height: 80rpx;
  background: #68ac7f;
  border: none;
  border-radius: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(78, 205, 196, 0.3);
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
}

.login-btn-text {
  color: #fff;
  font-size: 28rpx;
  font-weight: 600;
  text-align: center;
  line-height: 1;
}

.login-btn:active {
  transform: translateY(-2rpx);
  box-shadow: 0 12rpx 32rpx rgba(78, 205, 196, 0.4);
}

/* 统计信息 */
.stats-section {
  padding: 40rpx 30rpx;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10rpx);
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.2);
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.stat-item {
  text-align: center;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.stat-number {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #fff;
  margin-bottom: 8rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.stat-label {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 功能菜单 */
.menu-section {
  padding: 30rpx 20rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  margin-bottom: 20rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  transition: all 0.3s ease;
}

.menu-item:active {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
  width: 60rpx;
  text-align: center;
}

.menu-title {
  flex: 1;
  font-size: 30rpx;
  font-weight: 500;
  color: #2c3e50;
}

.menu-count {
  font-size: 24rpx;
  color: #7f8c8d;
  margin-right: 15rpx;
  background: #f8f9fa;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
}

.menu-arrow {
  font-size: 28rpx;
  color: #bdc3c7;
  font-weight: bold;
}

/* 我的发布预览 */
.my-shares-section {
  padding: 30rpx 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 0 10rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.view-all {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  background: rgba(255, 255, 255, 0.2);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
}

.shares-preview {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.share-preview-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  transition: all 0.3s ease;
}

.share-preview-item:active {
  transform: translateY(-1rpx);
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.1);
}

.preview-content {
  flex: 1;
  margin-right: 20rpx;
}

.preview-text {
  display: block;
  font-size: 26rpx;
  color: #2c3e50;
  line-height: 1.4;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.preview-time {
  display: block;
  font-size: 22rpx;
  color: #7f8c8d;
}

.preview-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.preview-img {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* 退出登录 */
.logout-section {
  padding: 30rpx 20rpx;
}

.logout-btn {
  width: 100%;
  height: 80rpx;
  background: rgba(231, 76, 60, 0.9);
  color: #fff;
  border: none;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 600;
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
}

.logout-btn:active {
  transform: translateY(-2rpx);
  background: rgba(231, 76, 60, 1);
  box-shadow: 0 8rpx 24rpx rgba(231, 76, 60, 0.3);
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .user-section {
    padding: 40rpx 20rpx 30rpx;
  }
  
  .user-avatar,
  .default-avatar {
    width: 100rpx;
    height: 100rpx;
  }
  
  .user-name {
    font-size: 32rpx;
  }
  
  .stats-section {
    padding: 30rpx 20rpx;
  }
  
  .stat-number {
    font-size: 32rpx;
  }
  
  .menu-item {
    padding: 25rpx;
  }
  
  .menu-icon {
    font-size: 36rpx;
  }
  
  .menu-title {
    font-size: 28rpx;
  }
  
  .preview-image {
    width: 80rpx;
    height: 80rpx;
  }
}

/* 动画效果 */
.user-section {
  animation: fadeInDown 0.6s ease-out;
}

.stats-section {
  animation: fadeInUp 0.6s ease-out;
  animation-delay: 0.1s;
}

.menu-item {
  animation: fadeInUp 0.6s ease-out;
}

.menu-item:nth-child(1) { animation-delay: 0.2s; }
.menu-item:nth-child(2) { animation-delay: 0.3s; }
.menu-item:nth-child(3) { animation-delay: 0.4s; }
.menu-item:nth-child(4) { animation-delay: 0.5s; }

.share-preview-item {
  animation: fadeInUp 0.6s ease-out;
}

.share-preview-item:nth-child(1) { animation-delay: 0.6s; }
.share-preview-item:nth-child(2) { animation-delay: 0.7s; }
.share-preview-item:nth-child(3) { animation-delay: 0.8s; }

@keyframes fadeInDown {
  from {
    opacity: 0;
    transform: translateY(-30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
