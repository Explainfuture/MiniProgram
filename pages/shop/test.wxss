/* pages/shop/test.wxss */
.container {
  min-height: 100vh;
  background-image: url('https://miniprogramforlusin.oss-cn-hangzhou.aliyuncs.com/Sucai/backgroundone.png');
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  padding: 20rpx;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 30rpx 0;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #fff;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.3);
  margin-bottom: 10rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
  margin-bottom: 20rpx;
}

.status-display {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  padding: 15rpx 30rpx;
  backdrop-filter: blur(10rpx);
}

.status-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

.status-value {
  font-size: 24rpx;
  font-weight: 600;
  color: #fff;
}

.test-buttons {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.test-btn {
  background: rgba(255, 255, 255, 0.9);
  color: #2c3e50;
  border: none;
  border-radius: 20rpx;
  padding: 20rpx;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s ease;
}

.test-btn:active {
  transform: scale(0.98);
}

.init-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: 700;
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.3);
}

.clear-btn {
  background: #e74c3c;
  color: #fff;
}

.results-container {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.results-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 20rpx;
}

.results-list {
  max-height: 600rpx;
  overflow-y: auto;
}

.result-item {
  display: flex;
  align-items: flex-start;
  gap: 10rpx;
  margin-bottom: 15rpx;
  padding: 10rpx;
  background: #f8f9fa;
  border-radius: 10rpx;
}

.result-time {
  font-size: 20rpx;
  color: #7f8c8d;
  flex-shrink: 0;
  margin-top: 2rpx;
}

.result-message {
  font-size: 24rpx;
  color: #2c3e50;
  line-height: 1.4;
  flex: 1;
}
