/* Âä†ÂÖ•Ë¥≠Áâ©ËΩ¶ÊåâÈíÆ */
.add-to-cart-btn {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
  color: #fff;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 26rpx;
  font-weight: 600;
  box-shadow: 0 6rpx 16rpx rgba(255, 107, 107, 0.4);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  flex-shrink: 0;
  position: relative;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  min-width: 160rpx;
}

.add-to-cart-btn::before {
  content: 'üõí';
  font-size: 22rpx;
  transition: transform 0.3s ease;
}

.add-to-cart-btn::after {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.6s ease;
}

.add-to-cart-btn:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.6);
}

.add-to-cart-btn:active::before {
  transform: scale(1.2);
}

.add-to-cart-btn:active::after {
  left: 100%;
}

.add-to-cart-btn[disabled] {
  background: linear-gradient(135deg, #bdc3c7 0%, #95a5a6 100%);
  color: #7f8c8d;
  box-shadow: 0 4rpx 8rpx rgba(189, 195, 199, 0.3);
  transform: none;
  cursor: not-allowed;
}

.add-to-cart-btn[disabled]::before {
  transform: none;
}

.add-to-cart-btn[disabled]::after {
  display: none;
}

/* Ë¥≠Áâ©ËΩ¶ÂºπÁ™ó */
.cart-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 2000;
  display: flex;
  align-items: flex-end;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
  backdrop-filter: blur(5rpx);
}

.cart-modal.show {
  opacity: 1;
  visibility: visible;
}

.cart-content {
  background: #fff;
  border-radius: 30rpx 30rpx 0 0;
  width: 100%;
  max-height: 85vh;
  display: flex;
  flex-direction: column;
  animation: slideUp 0.3s ease;
  box-shadow: 0 -8rpx 32rpx rgba(0, 0, 0, 0.2);
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

