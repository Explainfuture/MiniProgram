/* pages/character/detail/detail.wxss */
.container {
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  background-attachment: fixed;
  min-height: 100vh;
  padding-bottom: 120rpx;
  position: relative;
}

/* 背景遮罩层 */
.container::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.3) 0%, rgba(118, 75, 162, 0.3) 100%);
  z-index: -1;
}

/* 角色头部信息 */
.character-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx 40rpx;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10rpx);
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.2);
}

.character-avatar-section {
  position: relative;
  margin-bottom: 30rpx;
}

.character-avatar-large {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  border: 6rpx solid #fff;
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.3);
  transition: all 0.3s ease;
}

.character-avatar-large:active {
  transform: scale(0.95);
}

.character-badge {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
  color: #fff;
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 25rpx;
  font-weight: 600;
  box-shadow: 0 6rpx 12rpx rgba(255, 107, 107, 0.4);
}

.character-basic-info {
  text-align: center;
}

.character-name {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: rgb(66, 94, 74);
  margin-bottom: 10rpx;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.3);
}

.character-title {
  display: block;
  font-size: 28rpx;
  color: rgb(66, 94, 74,0.9);
  margin-bottom: 20rpx;
  font-style: normal;
}

.character-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  justify-content: center;
}

.character-tag {
  background: #458a5c;
  color: #fff;
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(78, 205, 196, 0.3);
  border: none;
}

/* 角色详细信息 */
.character-details {
  padding: 40rpx 20rpx;
}

.detail-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  overflow: hidden;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  padding: 30rpx 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
}

.character-description {
  display: block;
  font-size: 28rpx;
  color: #34495e;
  line-height: 1.8;
  padding: 30rpx;
}

/* 能力列表 */
.abilities-list {
  padding: 30rpx;
}

.ability-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.ability-item:last-child {
  border-bottom: none;
}

.ability-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
  width: 50rpx;
  text-align: center;
}

.ability-name {
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: 500;
}

/* 人际关系 */
.relationships-list {
  padding: 30rpx;
}

.relationship-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  transition: all 0.3s ease;
}

.relationship-item:last-child {
  border-bottom: none;
}

.relationship-item:active {
  background: #f8f9fa;
  border-radius: 12rpx;
  margin: 0 -20rpx;
  padding: 20rpx;
}

.relationship-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
  width: 50rpx;
  text-align: center;
}

.relationship-name {
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: 500;
}

/* 图片画廊 */
.character-gallery {
    padding: 30rpx; /* 容器内边距30rpx，让内容与边缘保持距离 */
  }
  
  /* 画廊图片样式（保持原始比例） */
  .gallery-image {
    width: 100%; /* 图片宽度占满父容器 */
    /* 移除固定高度，让高度根据原始比例自动计算 */
    border-radius: 16rpx; /* 图片圆角16rpx，呈现圆润效果 */
    box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15); /* 图片阴影：增强立体感 */
    transition: all 0.3s ease; /* 过渡动画效果 */
    object-fit: cover; /* 保持比例并填满容器（裁剪超出部分），避免拉伸 */
    /* 可选：如果希望完整显示图片（可能留空白），改用 object-fit: contain; */
  }
  
  /* 图片被点击时的样式（触摸反馈） */
  .gallery-image:active {
    transform: scale(0.98); /* 点击时轻微缩小，提供交互反馈 */
  }

/* 返回按钮 */
.back-button {
  position: fixed;
  top: 60rpx;
  left: 30rpx;
  display: flex;
  align-items: center;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  padding: 16rpx 24rpx;
  border-radius: 50rpx;
  backdrop-filter: blur(10rpx);
  z-index: 100;
  transition: all 0.3s ease;
}

.back-button:active {
  transform: scale(0.95);
  background: rgba(0, 0, 0, 0.7);
}

.back-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.back-text {
  font-size: 28rpx;
  font-weight: 500;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .character-header {
    padding: 40rpx 20rpx 30rpx;
  }
  
  .character-avatar-large {
    width: 160rpx;
    height: 160rpx;
  }
  
  .character-name {
    font-size: 40rpx;
  }
  
  .character-details {
    padding: 30rpx 15rpx;
  }
  
  .detail-section {
    margin-bottom: 20rpx;
  }
  
  .section-title {
    font-size: 28rpx;
    padding: 25rpx 25rpx 15rpx;
  }
  
  .character-description {
    font-size: 26rpx;
    padding: 25rpx;
  }
  
  .abilities-list,
  .relationships-list,
  .character-gallery {
    padding: 25rpx;
  }
  
  .ability-item,
  .relationship-item {
    padding: 15rpx 0;
  }
  
  .gallery-image {
    height: 300rpx;
  }
}

/* 动画效果 */
.character-header {
  animation: fadeInDown 0.6s ease-out;
}

.detail-section {
  animation: fadeInUp 0.6s ease-out;
}

.detail-section:nth-child(1) { animation-delay: 0.1s; }
.detail-section:nth-child(2) { animation-delay: 0.2s; }
.detail-section:nth-child(3) { animation-delay: 0.3s; }
.detail-section:nth-child(4) { animation-delay: 0.4s; }

@keyframes fadeInDown {
  from {
    opacity: 0;
    transform: translateY(-30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
