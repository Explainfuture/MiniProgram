/* pages/character/character.wxss */
.container {
  background-image: url('https://miniprogramforlusin.oss-cn-hangzhou.aliyuncs.com/Sucai/backgroundone.png');
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  background-attachment: fixed;
  min-height: 100vh;
}

/* 背景遮罩层 */
.container::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.02);
  z-index: -1;
  pointer-events: none;
}

/* 搜索区域 */
.search-section {
  padding: 30rpx 20rpx;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10rpx);
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
}

.search-container {
  position: relative;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50rpx;
  padding: 0 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.search-input {
  width: 100%;
  height: 80rpx;
  padding: 0 60rpx 0 20rpx;
  font-size: 28rpx;
  color: #2c3e50;
  border: none;
  background: transparent;
  box-sizing: border-box;
}

.search-input::placeholder {
  color: #95a5a6;
}

.search-icon {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 40rpx;
  height: 40rpx;
  opacity: 0.6;
}

/* 人物列表区域 */
.characters-section {
  padding: 20rpx;
  overflow: hidden;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 0 10rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: rgb(66, 94, 74);
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.character-count {
  font-size: 24rpx;
  color: rgb(66, 94, 74, 0.8);
  background: rgba(255, 255, 255, 0.2);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
}

/* 角色网格 */
.characters-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 0 10rpx;
}

.character-card {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 25rpx;
  transition: all 0.3s ease;
  backdrop-filter: blur(15rpx);
  border: 2rpx solid rgba(255, 255, 255, 0.8);
  position: relative;
  overflow: hidden;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.1);
  margin: 5rpx;
}

.character-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 24rpx rgba(0, 0, 0, 0.2);
}

/* 角色头像 */
.character-avatar-container {
  position: relative;
  display: flex;
  justify-content: center;
  margin-bottom: 20rpx;
}

.character-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s ease;
}

.character-badge {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
  color: #fff;
  font-size: 18rpx;
  padding: 4rpx 10rpx;
  border-radius: 15rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 8rpx rgba(255, 107, 107, 0.3);
  border: 2rpx solid #fff;
  z-index: 2;
}

/* 角色信息 */
.character-info {
  text-align: center;
  margin-bottom: 20rpx;
}

.character-name {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 8rpx;
}

.character-title {
  display: block;
  font-size: 24rpx;
  color: #7f8c8d;
  margin-bottom: 12rpx;
  font-style: normal;
}

.character-description {
  display: block;
  font-size: 24rpx;
  color: #5a6c7d;
  line-height: 1.4;
  text-align: left;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 角色标签 */
.character-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  justify-content: center;
}

.character-tag {
  background: #458a5c;
  color: #fff;
  font-size: 20rpx;
  padding: 6rpx 12rpx;
  border-radius: 16rpx;
  font-weight: 500;
  box-shadow: 0 2rpx 4rpx rgba(78, 205, 196, 0.2);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 100rpx 0;
  color: rgba(255, 255, 255, 0.8);
  font-size: 28rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  color: rgba(255, 255, 255, 0.8);
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  text-align: center;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .characters-grid {
    grid-template-columns: 1fr;
  }
  
  .character-card {
    padding: 25rpx;
  }
  
  .character-avatar {
    width: 100rpx;
    height: 100rpx;
  }
  
  .character-name {
    font-size: 28rpx;
  }
  
  .character-description {
    font-size: 22rpx;
  }
}

/* 动画效果 */
.character-card {
  animation: fadeInUp 0.6s ease-out;
}

.character-card:nth-child(1) { animation-delay: 0.1s; }
.character-card:nth-child(2) { animation-delay: 0.2s; }
.character-card:nth-child(3) { animation-delay: 0.3s; }
.character-card:nth-child(4) { animation-delay: 0.4s; }
.character-card:nth-child(5) { animation-delay: 0.5s; }
.character-card:nth-child(6) { animation-delay: 0.6s; }
.character-card:nth-child(7) { animation-delay: 0.7s; }
.character-card:nth-child(8) { animation-delay: 0.8s; }
.character-card:nth-child(9) { animation-delay: 0.9s; }

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 搜索高亮效果 */
.search-highlight {
  background: linear-gradient(135deg, #ffd700 0%, #ffed4e 100%);
  color: #2c3e50;
  padding: 2rpx 4rpx;
  border-radius: 4rpx;
  font-weight: 600;
}
