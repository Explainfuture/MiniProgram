/* pages/index/index.wxss */
.container {
  position: relative;
  min-height: 100vh;
  background-image: url('https://miniprogramforlusin.oss-cn-hangzhou.aliyuncs.com/Sucai/backgroundone.png');
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  background-attachment: fixed;
  overflow-x: hidden;
}

/* 背景遮罩层 */

/* 背景图片 */
.background-image {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  opacity: 0.9;
}

/* 轮播图样式 */
.carousel-section {
  margin: 20rpx 0 30rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
}

.carousel {
  height: 400rpx;
  border-radius: 20rpx;
}

.carousel-image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}

/* 区域标题 */
.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #fff;
  text-align: center;
  margin: 40rpx 0 30rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

/* 功能按钮区域 */
.function-buttons {
  display: flex;
  justify-content: space-around;
  margin: 30rpx 0;
  padding: 0 20rpx;
  gap: 20rpx;
}

/* 购物入口 */
.shop-entry {
  margin: 30rpx 20rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
  position: relative;
}

.shop-entry:active {
  transform: scale(0.98);
}

.shop-entry::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
  z-index: -1;
}

.shop-content {
  display: flex;
  align-items: center;
  padding: 30rpx;
  gap: 20rpx;
}

.shop-icon {
  font-size: 60rpx;
  flex-shrink: 0;
}

.shop-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.shop-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  line-height: 1.2;
}

.shop-subtitle {
  font-size: 24rpx;
  color: #7f8c8d;
  line-height: 1.2;
}

.shop-arrow {
  font-size: 32rpx;
  color: #667eea;
  font-weight: bold;
  flex-shrink: 0;
}

.function-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
  height: 140rpx;
  background: rgba(255, 255, 255, 0.7);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 24rpx;
  color: rgb(66, 94, 74);
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  backdrop-filter: blur(5rpx);
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.15);
  position: relative;
  overflow: hidden;
  text-align: center;
  line-height: 0.2;
}

.function-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.1) 0%, rgba(255, 255, 255, 0.05) 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.function-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.2);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
}

.function-btn:active::before {
  opacity: 1;
}

.btn-icon {
  font-size: 44rpx;
  margin-bottom: 8rpx;
  z-index: 1;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 44rpx;
}

.btn-text {
  font-size: 26rpx;
  font-weight: 600;
  z-index: 1;
  position: relative;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  text-align: center;
}

/* 关系网区域 */
.relationship-section {
  margin-bottom: 60rpx;
  transition: all 0.3s ease;
}

.relationship-section.hide {
  display: none;
}

.relationship-section.show {
  display: block;
  animation: fadeInUp 0.5s ease;
}

.relationship-container {
  position: relative;
  width: 100%;
  height: 600rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  margin: 0 20rpx;
  overflow: hidden;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.relationship-canvas {
  position: relative;
  width: 100%;
  height: 100%;
  transition: transform 0.1s ease-out;
  transform-origin: center center;
}

/* 角色节点 */
.character-node {
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 10;
  transition: all 0.3s ease;
}

.character-node:active {
  transform: scale(1.1);
}

.center-character {
  z-index: 20;
}

.character-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 3rpx solid #fff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
  transition: all 0.3s ease;
}

.center-character .character-avatar {
  width: 100rpx;
  height: 100rpx;
  border: 4rpx solid #ffd700;
  box-shadow: 0 6rpx 20rpx rgba(255, 215, 0, 0.4);
}

.character-name {
  font-size: 24rpx;
  color: #fff;
  margin-top: 10rpx;
  text-align: center;
  font-weight: 500;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.5);
  background: rgba(0, 0, 0, 0.3);
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}

/* 连接线 */
.connection-line {
  position: absolute;
  height: 2rpx;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.6), transparent);
  z-index: 5;
}

/* 缩放控制 */
.zoom-controls {
  display: flex;
  justify-content: center;
  gap: 20rpx;
  margin-top: 20rpx;
}

.zoom-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
}

.zoom-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.3);
}

/* 音乐播放器区域 */
.music-player-section {
  padding: 0 20rpx;
  margin-bottom: 40rpx;
}

.section-title {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
}

.title-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: 600;
  color: rgb(66, 94, 74);
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.music-player {
  background: rgba(255, 255, 255, 0.2) ;
  border-radius: 30rpx;
  padding: 40rpx 30rpx;
  backdrop-filter: blur(5rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.1);
  position: relative;
  overflow: hidden;
}

.music-player::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
  border-radius: 30rpx;
  z-index: -1;
}

/* 音乐封面区域 */
.music-cover-container {
  display: flex;
  justify-content: center;
  margin-bottom: 30rpx;
  position: relative;
}

.music-cover {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  overflow: hidden;
  position: relative;
  box-shadow: 0 15rpx 35rpx rgba(0, 0, 0, 0.2);
  transition: all 0.3s ease;
}

.music-cover.rotating {
  animation: rotate 3s linear infinite;
}

.cover-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.cover-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.2) 0%, rgba(118, 75, 162, 0.2) 100%);
  border-radius: 50%;
}

/* 播放指示器 */
.play-indicator {
  position: absolute;
  bottom: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  gap: 4rpx;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.play-indicator.active {
  opacity: 1;
}

.wave {
  width: 6rpx;
  height: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 3rpx;
  animation: wave 1.5s ease-in-out infinite;
}

.wave1 { animation-delay: 0s; }
.wave2 { animation-delay: 0.2s; }
.wave3 { animation-delay: 0.4s; }

/* 音乐信息 */
.music-info {
  text-align: center;
  margin-bottom: 30rpx;
}

.music-title {
  font-size: 36rpx;
  font-weight: 700;
  color: rgb(66, 94, 74);
  margin-bottom: 8rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.music-artist {
  font-size: 26rpx;
  color: rgb(66, 94, 74,0.8);
  font-weight: 500;
}

/* 进度条 */
.music-progress {
  margin-bottom: 30rpx;
}

.progress-container {
  margin-bottom: 15rpx;
}

.progress-bar {
  width: 100%;
  height: 6rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 3rpx;
  overflow: hidden;
  position: relative;
  cursor: pointer;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 3rpx;
  transition: width 0.3s ease;
  position: relative;
}

.progress-thumb {
  position: absolute;
  right: -8rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 16rpx;
  height: 16rpx;
  background: #fff;
  border-radius: 50%;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.2);
}

.time-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.current-time,
.total-time {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 500;
}

/* 控制按钮 */
.music-controls {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 50rpx;
}

.control-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  color: #fff;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  transition: all 0.3s ease;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.1);
}

.control-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.3);
}

.play-btn {
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
  border: 1rpx solid rgba(255, 107, 107, 0.3);
  box-shadow: 0 12rpx 25rpx rgba(255, 107, 107, 0.3);
}

.play-btn.playing {
  background: linear-gradient(135deg, #4ecdc4 0%, #44a08d 100%);
  border: 1rpx solid rgba(78, 205, 196, 0.3);
  box-shadow: 0 12rpx 25rpx rgba(78, 205, 196, 0.3);
}

.control-icon {
  font-size: 32rpx;
  font-weight: bold;
}

.play-btn .control-icon {
  font-size: 36rpx;
}

/* 动画效果 */
@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

@keyframes wave {
  0%, 100% {
    height: 20rpx;
  }
  50% {
    height: 40rpx;
  }
}

/* 淡入动画 */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 剧集介绍区域 */
.episodes-section {
  padding: 0 20rpx;
  transition: all 0.3s ease;
}

.episodes-section.hide {
  display: none;
}

.episodes-section.show {
  display: block;
  animation: fadeInUp 0.5s ease;
}

.episode-card {
  margin-bottom: 30rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
}

.episode-content {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
}

.episode-video {
  flex: 0 0 300rpx;
  height: 200rpx;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.episode-preview {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

.episode-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.episode-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 8rpx;
}

.episode-subtitle {
  font-size: 24rpx;
  color: #7f8c8d;
  margin-bottom: 15rpx;
}

.episode-description {
  font-size: 26rpx;
  color: #34495e;
  line-height: 1.6;
  margin-bottom: 20rpx;
  flex: 1;
}

.episode-tags {
  display: flex;
  gap: 10rpx;
  flex-wrap: wrap;
}

.tag {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  padding: 6rpx 12rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
}



/* 响应式设计 */
@media (max-width: 750rpx) {
  .episode-content {
    flex-direction: column;
  }
  
  .episode-video {
    flex: none;
    width: 100%;
    height: 300rpx;
  }
  
  .character-avatar {
    width: 60rpx;
    height: 60rpx;
  }
  
  .center-character .character-avatar {
    width: 80rpx;
    height: 80rpx;
  }
  
  .character-name {
    font-size: 20rpx;
  }
}

/* 动画效果 */
.character-node {
  animation: fadeInUp 0.6s ease-out;
}

.character-node:nth-child(2) { animation-delay: 0.1s; }
.character-node:nth-child(3) { animation-delay: 0.2s; }
.character-node:nth-child(4) { animation-delay: 0.3s; }
.character-node:nth-child(5) { animation-delay: 0.4s; }
.character-node:nth-child(6) { animation-delay: 0.5s; }
.character-node:nth-child(7) { animation-delay: 0.6s; }
.character-node:nth-child(8) { animation-delay: 0.7s; }
.character-node:nth-child(9) { animation-delay: 0.8s; }

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.episode-card {
  animation: slideInLeft 0.6s ease-out;
}

.episode-card:nth-child(2) { animation-delay: 0.2s; }
.episode-card:nth-child(3) { animation-delay: 0.4s; }
.episode-card:nth-child(4) { animation-delay: 0.6s; }

@keyframes slideInLeft {
  from {
    opacity: 0;
    transform: translateX(-50rpx);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}
